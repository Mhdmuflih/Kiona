	<script>
	async function paymentMethod(payment) {
    const confirmation = await Swal.fire({
        title: 'Confirm Payment',
        text: "Are you sure you want to proceed with Cash On Delivery?",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, proceed!'
    });

    if (confirmation.isConfirmed) {
        try {
            const response = await axios.post('/checkout/cod', {payment});
            if (response.data.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Confirmed!',
                    text: response.data.message
                });
                window.location.href
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Failed!',
                    text: response.data.message || 'Unable to process the order.'
                });
            }
        } catch (error) {
            console.error('Error during the transaction:', error);
            await Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Something went wrong!'
            });
        }
    }
}

