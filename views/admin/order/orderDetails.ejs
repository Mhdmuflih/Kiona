    <script>
        async function status(orderItemId,value) {
            try {
                const response = await axios.post('/admin/orderDetails/updateStatus', { id:orderItemId, value });
                if(response){
                  window.location.reload();
                }
            } catch (error) {
                console.log(error.message);
            }
        }
