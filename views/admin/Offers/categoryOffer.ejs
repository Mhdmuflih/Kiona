    <script>
      async function deleteCategoryOffer(id){
        const confirmation  = await Swal.fire({
            title: 'Are you sure?',
            text: 'You won\'t be able to revert this!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, Delete Category Offer!'
        })
        if(confirmation.isConfirmed){
          try {
            const response = await axios.delete('/admin/categoryOffers/delete', { data: { id } });
            if(response.data.success){
              await Swal.fire({
                icon: 'success',
                title: 'Success',
                text: response.data.message
              }).then(()=>{
                window.location.href = '/admin/categoryOffers'
              })
            }else{
              await Swal.fire({
                icon: 'error',
                title: 'Error',
                text: response.data.message
              });
            }
          } catch (error) {
            console.log(error.message);
          }
        }
      }
    </script>


