    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <script>
        document.getElementById("couponForm").addEventListener("submit",async(event)=>{
            event.preventDefault();
            
            const formElement = document.getElementById('couponForm')
            const formData = new FormData(formElement);

            const formValues = {}

            for (const entry of formData.entries()) {
                const [key, value] = entry;
                formValues[key] = value;
            }
            try {
                const response = await axios.post('/admin/add_coupon_offer',formValues)
                if(response.data.success){
                    Swal.fire({
                        icon:"success",
                        title:"success",
                        text:response.data.message
                    }).then(()=>{
                        window.location.href = "/admin/couponOffers";
                    })
                }else{
                    Swal.fire({
                        icon:"error",
                        title:"error",
                        text:response.data.message
                    })
                    window.location.href = '/admin/add_coupon_offer';
                }
            } catch (error) {
                console.log(error.message);
                Swal.fire({
                    icon:"error",
                    title:"error",
                    text:error.message
                })
            }

        })
    </script>



