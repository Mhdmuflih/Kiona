      async function editCategory(categoryID) {
    window.location.href = `/admin/edit_category?id=${categoryID}`;
}


     
      async function deleteCategory(id){

        const responce = await axios.post('http://localhost:8000/admin/category/delete', { id })

        if(responce.data.success){
          await Swal.fire({
            icon:"success",
            title:"success",
            text:responce.data.message
          })
          window.location.href="/admin/category";
        }else{
          await Swal.fire({
            icon:"error",
            title:"error",
            text:responce.data.message
          })
          window.location.href="/admin/category"
        }

      }

