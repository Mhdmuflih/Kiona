  <script>

function handleFileSelect(event) {
    const files = event.target.files;
    const imagePreview = document.getElementById('imagePreview');
    imagePreview.innerHTML = ''; // Clear previous previews

    for (let i = 0; i < files.length; i++) {
        const file = files[i];
        const reader = new FileReader();

        reader.onload = function (e) {
            const image = document.createElement('img');
            image.src = e.target.result;

            const closeButton = document.createElement('button');
            closeButton.innerHTML = 'Close';
            closeButton.className = 'btn btn-sm btn-danger mt-1';
            closeButton.onclick = function () {
                imagePreview.removeChild(imageContainer);
            };

            const imageContainer = document.createElement('div');
            imageContainer.className = 'image-container';
            imageContainer.appendChild(image);
            imageContainer.appendChild(closeButton);

            imagePreview.appendChild(imageContainer);
        };

        reader.readAsDataURL(file);
    }
}


    

    document.getElementById("productForm").addEventListener("submit", async (e) => {
      e.preventDefault();
      check();
    });

    const check = async ()=>{

      const imageInput = document.getElementById("image");
      const imageErr = document.getElementById("imageErr");
      const name = document.getElementById("name").value.trim();
      const nameErr = document.getElementById("nameErr");
      const price = document.getElementById("price").value.trim();
      const priceErr = document.getElementById("priceErr");
      const quantity = document.getElementById("quantity").value.trim();
      const quantityErr = document.getElementById("quantityErr");
      const description = document.getElementById("description").value.trim();
      const descriptionErr = document.getElementById("descriptionErr");

      let isValid = true;

      imageErr.innerHTML = '';
      nameErr.innerHTML = '';
      priceErr.innerHTML = '';
      quantityErr.innerHTML = '';
      descriptionErr.innerHTML = '';

      if (!imageInput.files || imageInput.files.length === 0) {
        imageErr.innerHTML = "Please select an Image";
        isValid = false;
      } else {
        for (let i = 0; i < imageInput.files.length; i++) {
          const image = imageInput.files[i];
          if (!/\.(jpg|jpeg|png)$/i.test(image.name)) {
            imageErr.innerHTML = "Only JPG, JPEG, or PNG files are allowed.";
            isValid = false;
            break;
          }
          if (image.size > 5242880) { // 5 * 1024 * 1024
            imageErr.innerHTML += "<br>File size must not exceed 5MB.";
            isValid = false;
            break;
          }
        }
      }

      if (name === '') {
        nameErr.innerHTML = "Please Enter the Name.";
        isValid = false;
      } else {
        const nameRegex = /^[a-zA-Z\s]*$/;
        if (!nameRegex.test(name)) {
          nameErr.innerHTML = "Please enter a valid name";
          isValid = false;
        }
      }


      if (!price) {
        priceErr.innerHTML = "Please Enter Price";
        isValid = false;
      } else {
        const priceRegex = /^[1-9]\d*(\.\d+)?$/;;
        if(!priceRegex.test(price)){
          priceErr.innerHTML = "Price must be a positive number";
          isValid = false;
        }
      }

      if (!quantity) {
        quantityErr.innerHTML = "Please Enter Quantity";
        isValid = false;
      } else {
        const quantityRegex = /^[1-9]\d*(\.\d+)?$/;;
        if(!quantityRegex.test(quantity)){
          quantityErr.innerHTML = "Quantity must be a positive number";
          isValid = false;
        }
      }

      if (description === '') {
        descriptionErr.innerHTML = "Please Enter Description.";
        isValid = false;
      }

      if (isValid) {
  const form = document.getElementById("productForm");
  const formData = new FormData(form);

  try {
    const response = await axios.post('/admin/add_product', formData);
    if (response.data.success) {
      Swal.fire({
        icon: 'success',
        title: 'Success',
        text: response.data.message
      }).then(() => {
        window.location.href = "/admin/product";
      })
    } else {
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: response.data.message
      });
      window.location.href = "/admin/add_product";
    }
  } catch (error) {
    console.error(error);
    Swal.fire({
      icon: 'error',
      title: 'Error',
      text: error.message
    });
  }
}
    }


    

