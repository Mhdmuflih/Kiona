      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

      <script>
        async function editProduct(id) {
          window.location = `/admin/editProduct?id=${id}`
        }

        async function deleteProduct(id) {
          const responce = await axios.post('http://localhost:8000/admin/product/delete', { id })
          if (responce.data.success) {
            await Swal.fire({
              icon: 'success',
              title: 'Success',
              text: responce.data.message
            })
            window.location.href = '/admin/product';
          } else {
            await Swal.fire({
              icon: 'error',
              title: 'error',
              text: responce.data.message
            })
            window.location.href = '/admin/product';
          }
        }


      </script>


